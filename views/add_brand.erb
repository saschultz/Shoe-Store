<h3>Add a shoe brand</h3>

<div class="row">
  <h4><%= @error_message %></h4>
  <div class="col-sm-6">
    <form action="/add_brand" method="post">
      <div class="form-group">
        <label for="brand_name">brand name</label><br>
        <input type="text" name="brand_name">
      </div>
      <div class="form-group">
        <label for="price">price</label><br>
        <input type="text" name="price">
      </div>
      <button type="submit">Add</button>
    </form>
  </div>

  <div class="col-sm-6">
    <% if @brands.any? %>
      <ul>
        <% @brands.each do |brand| %>
          <li><strong><%= brand.name %></strong> <em><%= brand.to_currency(brand.price) %></em></li>
        <% end %>
      </ul>

    <% else %>
      <p><em>no brands added</em></p>
    <% end %>
  </div>
</div>
